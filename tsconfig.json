{
  "compilerOptions": {
    "incremental": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["vitest/globals"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "paths": {
      "document-models/*": ["./document-models/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["dist", "node_modules", "data", "**/data", "eslint.config.js", "scripts/fetch-data.ts"]
}
